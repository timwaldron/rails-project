
<div class="filter-container">

  <form id="filter-form" class="filter-form" action="<%= search_game_path %>">

    <div class="form-group">
      <input type="text" name="search_title" id="search_title" placeholder="Search for titles" value="<%= params[:search_title] if params[:search_title] != nil %>" />
    </div>
    
    <div class="form-group">
      <input type="checkbox" name="PlayStation 4" id="PlayStation 4" checked/>
      <label for="PlayStation 4">PlayStation 4</label>
    </div>
    
    <div class="form-group">
      <input type="checkbox" name="Xbox One" id="Xbox One" checked/>
      <label for="Xbox One">Xbox One</label>
    </div>
    
    <div class="form-group">
      <input type="checkbox" name="Nintendo Switch" id="Nintendo Switch" checked/>
      <label for="Nintendo Switch">Nintendo Switch</label>
    </div>
    
    <div class="form-group">
      <input type="checkbox" name="PC" id="PC" checked/>
      <label for="PC">PC</label>
    </div>

    <div class="form-group">
      <input type="submit" value="Search" />
    </div>
  </form>
</div>