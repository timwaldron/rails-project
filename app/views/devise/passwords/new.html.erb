<div class="intro2">
  <div class="forgotpassword-image"></div> 
</div>

<div class="forgotpassword-align"> 
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, for: "email" %> 
      <%= f.email_field :email, autofocus: true, autocomplete: "email",  class:"form-control", id:"email" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-sm btn-info" %>
    </div>
  <% end %>
  <div class="devise-shared">
    <%= render "devise/shared/links" %>
  </div>
</div>