<h1>Transaction History:</h1>

<div>
<h3>Purchased Items</h3>
<% @items_purchased.each do |purchased| %>
  <p>Transaction ID: <%= purchased.id %></p>
  <p>Game Title: <%= get_game(purchased.item_id).title %></p>
  <p>Sold Price: <%= number_to_currency(get_game(purchased.item_id).price, :unit => "$") %></p>
  <p>Seller: <%= link_to get_username(purchased.seller_id), show_user_listings_path(purchased.seller_id) %></p>
  <p>Purchase at: <%= purchased.created_at %></p>
  <hr>
<% end %>
</div>

<h3>Sold Items</h3>
<% @items_sold.each do |sold| %>
  <p>Transaction ID: <%= sold.id %></p>
  <p>Game Title: <%= get_game(sold.item_id).title %></p>
  <p>Sold Price: <%= number_to_currency(get_game(sold.item_id).price, :unit => "$") %></p>
  <p>Buyer: <%= link_to get_username(sold.buyer_id), show_user_listings_path(sold.buyer_id) %></p>
  <p>Sold at: <%= sold.created_at %></p>
  <hr>
<% end %>
</div>